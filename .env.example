# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/mini-user-auth
# For MongoDB Atlas, use: mongodb+srv://<username>:<password>@cluster.mongodb.net/mini-user-auth

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Email Configuration (for email verification and password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@miniauth.com

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5000
